# Пример файла .env для ZaFrame Backend
# Скопируйте этот файл в .env и заполните реальными значениями
# .env уже добавлен в .gitignore — секреты не попадут в git

# === FastAPI ===
APP_NAME=ZaFrame API
APP_VERSION=0.1.0
DEBUG=false

# === Сервер ===
HOST=0.0.0.0
PORT=8000

# === PostgreSQL ===
# Формат: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/zaframe

# === Безопасность (JWT, Magic Link) ===
# ВАЖНО: Сгенерируйте новый SECRET_KEY для production!
# Команда: openssl rand -hex 32
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MAGIC_LINK_EXPIRE_MINUTES=15

# URL фронтенда для Magic Link (redirect после входа)
FRONTEND_URL=http://localhost:3000

# Resend API key для отправки email (пусто = логируем ссылку в dev)
# https://resend.com
RESEND_API_KEY=

# === CORS ===
# Разрешённые origins для фронтенда (через запятую, без пробелов)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# === Stripe (оплата) ===
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_....
# Webhook signing secret (при настройке webhook в Stripe Dashboard)
STRIPE_WEBHOOK_SECRET=whsec_2....
STRIPE_CURRENCY=eur
